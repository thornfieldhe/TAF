@using TAF.MVC
@using TAF.Utility
@using TAF.Web.Models
@using TAF.Web.Views
@model  List<Tuple<Guid,string,string>>
<div class="row" id="main">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-primary">
                <span class="widget-caption">商品管理</span>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <add-button title="新增"></add-button>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-hover table-bordered ">
                            <thead>
                                <tr role="row">
                                    <th>
                                        商品名称
                                    </th>
                                    <th>
                                        商品类别
                                    </th>
                                    <th>
                                        颜色
                                    </th>
                                    <th>
                                        价格
                                    </th>
                                    <th>
                                        生产日期
                                    </th>
                                    <th style="width: 180px;">
                                        操作
                                    </th>
                                </tr>
                            <tr role="row">
                                <th>
                                    <input type="text" class="form-control" placeholder="商品名称" v-model="queryEntity.name" />
                                </th>
                                <th style="width: 120px">
                                    <select id="queryCategoryId" style="width: 100%" v-model="queryEntity.categoryId">
                                        <option value="">请选择...</option>
                                        @{
                                            foreach (var item in Model.Where(r => r.Item2 == ((int)DictionaryKey.ProductCategory).ToString()))
                                            {
                                                <option value="@item.Item1">@item.Item3</option>
                                            }
                                        }
                                    </select>
                                </th>
                                <th style="width: 120px">
                                    <select id="queryColorId" style="width: 100%" v-model="queryEntity.colorId">
                                        <option value="">请选择...</option>
                                        @{
                                            foreach (var item in Model.Where(r => r.Item2 == ((int)DictionaryKey.Color).ToString()))
                                            {
                                                <option value="@item.Item1">@item.Item3</option>
                                            }
                                        }
                                    </select>
                                </th>
                                <th>
                                    <div class="spinbox spinbox-horizontal spinbox-right" id="queryPrice">
                                        <div class="spinbox-buttons	btn-group">
                                            <button type="button" class="btn spinbox-down blueberry">
                                                <i class="fa fa-minus"></i>
                                            </button>
                                            <button type="button" class="btn spinbox-up purple">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                        </div>
                                        <input type="text" class="spinbox-input form-control " placeholder="价格" name="price" v-model="queryEntity.price"/>
                                    </div>
                                </th>
                                <th style="width: 220px">
                                        <span class="input-icon icon-right">
                                            <input type="text" class="form-control" id="queryProductionDate" placeholder="生产日期" readonly="readonly" />
                                            <i class="fa fa-calendar"></i>
                                        </span>
  </th>
                                <th><search-command></search-command></th>
                            </tr>
                            </thead>
                            <tbody>
                                <tr v-for=" it in list.Datas">
                                    <td>{{it.Name}}</td>
                                    <td>{{it.Category}}</td>
                                    <td>{{it.Color}}</td>
                                    <td>{{it.Price}}</td>
                                    <td>{{it.ProductionDate}}</td>
                                    <td>
                                        <row-command :id="it.Id" title="编辑" :name="it.Name"></row-command>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot is="table-foot" colspan="6"></tfoot>
                        </table>
                    </div>
                </div>
                <form-edit></form-edit>
                <dialog-delete delete-url="/Product/Delete/"></dialog-delete>
            </div>
        </div>
    </div>
</div>
<template id="productFormBody">
    <form id="form" class="form-horizontal " name="form">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">商品名称</label>
                    <div class="col-sm-10">
                        <span class="input-icon icon-right">
                            <input type="text" class="form-control " placeholder="商品名称" name="name" v-model="item.Name" />
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">商品类别</label>
                    <div class="col-sm-10">
                        <select name="categoryId" id="categoryId" style="width: 100%" v-model="item.Category" style="width: 100%">
                            <option value="">请选择...</option>
                            @{
                                foreach (var item in Model.Where(r => r.Item2 == ((int)DictionaryKey.ProductCategory).ToString()))
                                {
                                    <option value="@item.Item1">@item.Item3</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">颜色</label>
                    <div class="col-sm-10">
                        <select name="colorId" id="colorId" style="width: 100%" v-model="item.Color" style="width: 100%">
                            <option value="">请选择...</option>
                            @{
                                foreach (var item in Model.Where(r => r.Item2 == ((int)DictionaryKey.Color).ToString()))
                                {
                                    <option value="@item.Item1">@item.Item3</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">价格</label>
                    <div class="col-sm-10">
                        <div class="spinbox spinbox-horizontal spinbox-right" id="itemPrice">
                            <div class="spinbox-buttons	btn-group">
                                <button type="button" class="btn spinbox-down blueberry">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <button type="button" class="btn spinbox-up purple">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                                <input type="text" class="spinbox-input form-control "  placeholder="价格" name="price" v-model="item.Price" />
                            </div>
                        </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">生产日期</label>
                    <div class="col-sm-10">
                        <div class="input-group" style="width: 100%">
                            <span class="input-icon icon-right">
                                <input type="text" class="form-control" id="productionDate" placeholder="生产日期" readonly="readonly" v-model="item.ProductionDate" />
                                <i class=" fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</template>
<script src="~/Scripts/product.js"></script>